{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Connect to Backend Container",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2345,
      "host": "localhost",
      "showLog": true,
      "trace": "verbose",
      "substitutePath": [
        {
          "from": "${workspaceFolder}/backend",
          "to": "/app"
        }
      ]
    },
    {
      "name": "Debug Backend (Local)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/finops",
      "args": ["api", "--config", "${workspaceFolder}/backend/config.yaml"],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "FINOPS_POSTGRES_DSN": "postgresql://finops:finops@localhost:5432/finops?sslmode=disable",
        "FINOPS_LOGGING_LEVEL": "debug"
      }
    }
  ]
}

