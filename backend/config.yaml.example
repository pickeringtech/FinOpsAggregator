postgres:
  dsn: postgresql://finops:finops@localhost:5432/finops?sslmode=disable

compute:
  base_currency: GBP
  active_dimensions:
    - instance_hours
    - storage_gb_month
    - egress_gb
    - iops
    - backups_gb_month

charts:
  out_dir: ./charts

# Storage configuration for chart exports
storage:
  # Storage backend URL (file://, s3://, gs://)
  # Examples:
  #   file://./charts                    # Local filesystem
  #   s3://my-bucket?region=us-east-1    # AWS S3
  #   gs://my-bucket                     # Google Cloud Storage
  url: file://./charts
  # Optional prefix for all files (like a folder path)
  prefix: "finops-charts"

jobs:
  concurrency: 4
  queues:
    default: 1
    exports: 1

logging:
  level: info
