postgres:
  dsn: postgresql://finops:finops@localhost:5432/finops?sslmode=disable

compute:
  base_currency: GBP
  active_dimensions:
    - instance_hours
    - storage_gb_month
    - egress_gb
    - iops
    - backups_gb_month
    # Application-level / non-infrastructure product costs
    - saas_subscriptions
    - third_party_api_costs
    - software_licenses
    - support_contracts
    - professional_services
    - compliance_fees
    - payment_processing_fees
    - data_provider_costs

charts:
  out_dir: ./charts

# Storage configuration for chart exports
storage:
  # Storage backend URL (file://, s3://, gs://)
  # Examples:
  #   file://./charts                    # Local filesystem
  #   s3://my-bucket?region=us-east-1    # AWS S3
  #   gs://my-bucket                     # Google Cloud Storage
  url: file://./charts
  # Optional prefix for all files (like a folder path)
  prefix: "finops-charts"

jobs:
  concurrency: 4
  queues:
    default: 1
    exports: 1

logging:
  level: info

# AWS Lambda configuration (for serverless deployment)
# These settings are typically set via environment variables in Lambda
lambda:
  # Handler type: import_awscur, import_dynatrace, export, allocate
  handler: ""
  # S3 bucket for data imports (set via FINOPS_LAMBDA_IMPORT_BUCKET)
  import_bucket: ""
  # S3 bucket for data exports (set via FINOPS_LAMBDA_EXPORT_BUCKET)
  export_bucket: ""
  # Auto-create missing nodes during import
  create_missing_nodes: false
